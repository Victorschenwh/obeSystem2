    </constructor>
  </resultMap>-->
  <insert id="insert" parameterType="com.dbsy.obe.pojo.Target">
    insert into target (id, synopsis, introduction, 
      plan_id)
    values (#{id,jdbcType=INTEGER}, #{synopsis,jdbcType=VARCHAR}, #{introduction,jdbcType=VARCHAR}, 
      #{planId,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.dbsy.obe.pojo.Target">
    insert into target
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="synopsis != null">
        synopsis,
      </if>
      <if test="introduction != null">
        introduction,
      </if>
      <if test="planId != null">
        plan_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="synopsis != null">
        #{synopsis,jdbcType=VARCHAR},
      </if>
      <if test="introduction != null">
        #{introduction,jdbcType=VARCHAR},
      </if>
      <if test="planId != null">
        #{planId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <select id="list" resultType="com.dbsy.obe.pojo.Target">
    select * from target
    <where>
      <if test="name != null">
        or name like concat('%',#{name},'%')
      </if>
      <if test="username != null">
        or username like concat('%',#{username},'%')
      </if>
    </where>
    <if test="page!=null and pageSize != null">
      limit (#{page}-1)* #{pageSize},#{pageSize}
    </if>
  </select>

  <select id="listCount" resultType="int">
    select count(*) from target
    <where>
      <if test="name != null">
        or name like concat('%',#{name},'%')
      </if>
      <if test="username != null">
        or username like concat('%',#{username},'%')
      </if>
    </where>
  </select>

  <delete id="batchRemove">
    delete from target where id in
    <foreach item="id" collection="array" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>
</mapper>