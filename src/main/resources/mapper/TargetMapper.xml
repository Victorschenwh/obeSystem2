      <arg column="id" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="synopsis" javaType="java.lang.String" jdbcType="VARCHAR" />
      <arg column="introduction" javaType="java.lang.String" jdbcType="VARCHAR" />
